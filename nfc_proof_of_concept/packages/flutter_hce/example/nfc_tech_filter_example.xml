<?xml version="1.0" encoding="utf-8"?>
<!-- 
ARCHIVO: android/app/src/main/res/xml/nfc_tech_filter.xml
PROPÓSITO: Definir qué tecnologías NFC pueden activar la aplicación
-->

<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    
    <!-- TECNOLOGÍAS NFC SOPORTADAS PARA ACTIVAR LA APP -->
    
    <!-- ISO-DEP (ISO 14443-4 Type A/B) - Más común para HCE -->
    <tech-list>
        <tech>android.nfc.tech.IsoDep</tech>
    </tech-list>
    
    <!-- NFC-A (ISO 14443 Type A) -->
    <tech-list>
        <tech>android.nfc.tech.NfcA</tech>
    </tech-list>
    
    <!-- NFC-B (ISO 14443 Type B) -->
    <tech-list>
        <tech>android.nfc.tech.NfcB</tech>
    </tech-list>
    
    <!-- NDEF (si tu app necesita leer/escribir NDEF) -->
    <tech-list>
        <tech>android.nfc.tech.Ndef</tech>
    </tech-list>
    
    <!-- NFC-F (Felica) - Opcional -->
    <tech-list>
        <tech>android.nfc.tech.NfcF</tech>
    </tech-list>
    
    <!-- MIFARE Classic - Opcional -->
    <tech-list>
        <tech>android.nfc.tech.MifareClassic</tech>
    </tech-list>

</resources>
