{
  "java.compile.nullAnalysis.mode": "automatic",
  "dart.flutterHotReloadOnSave": "never",
  "dart.buildRunnerAdditionalArgs": ["--delete-conflicting-outputs"],
  "files.watcherExclude": {
    "**/build/**": true,
    "**/.gradle/**": true,
    "**/android/.gradle/**": true,
    "**/android/build/**": true,
    "**/packages/**/build/**": true
  },
  "search.exclude": {
    "**/build": true,
    "**/.gradle": true
  }
}
